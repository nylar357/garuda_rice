#!/bin/bash
# Tiny colored fetch script
# Requires Typicons Font to display the icons
# elenapan @ github

f=3 b=4
for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "\e[${!j}${i}m"
  done
done
d=$'\e[1m'
t=$'\e[0m'
v=$'\e[7m'

# Items
sep=ï‘„
s=$d$f0$sep$t

w=$(echo " ï”‚ ")  
wifiname="$(iwgetid | cut -d \" -f2)"

h=$(echo " ðŸ—” ") 
wmname="$(xprop -id $(xprop -root -notype | awk '$1=="_NET_SUPPORTING_WM_CHECK:"{print $5}') -notype -f _NET_WM_NAME 8t | grep "WM_NAME" | cut -f2 -d \")"

k=$(echo " ðŸŸ• ")
kernel="$(uname -r | cut -d '-' -f1)"

r=$(echo " ðŸ–µ ") 
resolution="$(xrandr --listmonitors | grep "1920" | awk '{print $3-"/344",$4}')"

sh=$(echo " îž¢ ")
shell=$(basename $SHELL)

proton=$(echo " ï – ")
vpn="$(protonvpn-cli status | grep "IP" | awk '{print $2}') $(protonvpn-cli status | grep "No" | awk '{print $0}')"

# (\ /)
# ( Â· Â·)
# c(")(")

# (\ /)
# ( . .)
# c(")(")

tput clear
cat <<EOF

             $d$f1$h  $t$wmname
   (\ /)     $f3$k  $t$kernel
   ( $d. .$t)    $f2$sh  $t$shell
   c($f1"$t)($f1"$t)   $f5$r  $t$resolution
             
$(curl wttr\.in/Moon)
